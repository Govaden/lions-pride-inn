<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Lion's Pride Inn"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lionsprideinn"
        tools:targetApi="31">
        <activity
            android:name=".StarterActivity"
            android:exported="true"
            android:label="Starters"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainCoursesActivity"
            android:exported="true"
            android:label="Main Courses"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DessertsActivity"
            android:exported="true"
            android:label="Desserts"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>